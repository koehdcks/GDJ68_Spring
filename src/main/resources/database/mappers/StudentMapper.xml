<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


 	<mapper namespace="com.iu.main.student.StudentDAO">
 		<select id="getList" resultType="StudentDTO">
 			SELECT * FROM STUDENT ORDER BY STUNUM DESC
 		</select>
 		<select id="getDetail" resultType="StudentDTO" parameterType="StudentDTO">
 			SELECT * FROM STUDENT WHERE STUNUM=#{stuNum}
 		</select>
 		
 		<insert id="setAdd" parameterType="StudentDTO">
 			INSERT INTO STUDENT VALUES(STU_SEQ.NEXTVAL,#{stuName},#{stuKor},#{stuEng},#{stuMath},#{stuTotal},#{stuAvg})
 		</insert>
 		
 		<update id="setUpdate" parameterType="StudentDTO">
 			UPDATE STUDENT 
 			SET STUNAME=#{stuName},STUKOR=#{stuKor},STUENG=#{stuEng},STUMATH=#{stuMath},STUTOTAL=#{stuTotal},STUAVG=#{stuAvg}
 			WHERE STUNUM=#{stuNum}
 		</update>
 		
 		<delete id="setDelete" parameterType="StudentDTO">
 			DELETE STUDENT WHERE STUNUM= #{stuNum}
 		</delete>
 	</mapper>